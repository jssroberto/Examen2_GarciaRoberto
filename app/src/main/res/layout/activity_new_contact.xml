<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewContactActivity">

    <TextView
            android:id="@+id/first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Contact"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_gravity="center" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textSize="16sp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="50dp" />

    <EditText
            android:id="@+id/input_first_name_new_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="name"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:hint="First Name"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/input_background"
            android:layout_marginTop="10dp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textSize="16sp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp" />

    <EditText
            android:id="@+id/input_last_name_new_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="name"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:hint="Last Name"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/input_background"

            android:layout_marginTop="10dp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company"
            android:textSize="16sp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp" />

    <EditText
            android:id="@+id/input_company_new_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="16sp"
            android:hint="Company"
            android:background="@drawable/input_background"

            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp" />

    <EditText
            android:id="@+id/input_email_new_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="emailAddress"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:hint="Email"
            android:background="@drawable/input_background"

            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textSize="16sp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp" />

    <EditText
            android:id="@+id/input_phone_new_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="phone"
            android:inputType="phone"
            android:textSize="16sp"
            android:hint="Phone"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_background"
            />

    <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

    <Button
            android:id="@+id/btn_save_new_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:layout_marginHorizontal="30dp"
            android:text="Save Contact"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginBottom="80dp" />

</LinearLayout>